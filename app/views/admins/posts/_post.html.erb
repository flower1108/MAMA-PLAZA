<% posts.each do |post| %>
  <div class="card mx-auto mt-4 shadow-lg" style="max-width: 900px;">
    <div class="row no-gutters">
    <div class="col-lg-3">
      <%= link_to admins_post_path(post.id) do %>
        <%= image_tag post.get_post_image, :height => '180', class:"card-img-top"; %>
      <% end %>
      </div>
      <div class="col-lg-9">
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            <p class="card-title">
              <%= link_to(admins_post_path(post.id), class:"text-dark") do %>
                <strong><span> <%= post.title %></span></strong>
              <% end %>
            </p>
            <span><i class="fas fa-comments" style="color: #8ab3a4;"></i><%= link_to "コメント #{post.comments.count} 件", admins_post_path(post.id), class: "text-link" %></span>
            <span class="post-date"><%= post.created_at.strftime('%Y/%m/%d') %></span>
          </div>
        </div>
            <p class="card-text"><%= post.body.truncate(75) %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
