<header class="w-100 d-flex justify-content-between align-items-center px-3" style="background-color:#f4f2e9">

  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-logo" href="/">
      <%= image_tag 'PF.logo.1.png', :height =>'100' %>
      </a>
      <%= render 'layouts/search' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav d-flex flex-row">
        <% if user_signed_in? %>
        <!--ユーザーがログインしている時 -->
          <li>
            <%= link_to new_post_path,class: 'nav-link text-dark',id: 'text' do %>
            <i class="fas fa-pen"></i>
            新規投稿
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user),class: 'nav-link text-dark' do %>
            <i class="fas fa-home-lg-alt"></i>
            マイページ
            <% end %>
          </li>
          <li>
            <%=  link_to users_path,class: 'nav-link text-dark' do %>
            <i class="fas fa-user-friends"></i>
            ユーザー
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-dark' do %>
            <i class="fas fa-sign-out-alt"></i>
            ログアウト
            <% end %>
          </li>
        <% elsif admin_signed_in? %>
        <!-- 管理者がログインしている時 -->
          <li>
            <%=  link_to admins_posts_path,class: 'nav-link text-dark' do %>
            投稿一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admins_users_path,class: 'nav-link text-dark' do %>
            ユーザー一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-dark' do %>
            ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
            <i class="fas fa-user-plus"></i>
            新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
            <i class="fas fa-sign-in-alt"></i>
            ログイン
            <% end %>
          </li>
          <li>
            <%= link_to users_guest_sign_in_path, class: 'nav-link text-dark', method: :post do %>
            <i class="fas fa-user-check"></i>
            ゲストログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
        </div>
      </div>
    </div>
  </nav>
  </div>
</header>