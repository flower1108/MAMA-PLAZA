<div class="container">
  <div class="row">
    <div class="col">

      <h2>新規投稿</h2>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @post, url:'/posts' do |f| %>

        <div class="field mt-4">
          <%= f.label :"タイトル" %><br />
          <%= f.text_field :title %>
        </div>

        <div class="field mt-2">
          <%= f.label :"本文" %><br />
          <%= f.text_area :body %>
        </div>

        <div class="field mt-2">
          <%= f.label :"カテゴリ" %><br />
          <%= f.select :category, [["くらし", "living"], ["おでかけ", "trip"], ["ごはん", "food"], ["ざつだん", "talk"]], include_blank: "カテゴリ選択" %>
        </div>

        <div class="field mt-2">
          <%= f.label :"画像" %><br />
          <%= f.file_field :post_image, accept: "image/*" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit '投稿', class: "btn btn-outline-secondary" %>
        </div>

      <% end %>

    </div>
  </div>
</div>