<div class="container">
  <div class="row d-flex justify-content-center">
    <h2 class="border-bottom border-gray m-0 pr-1 post-blog-heading">ざつだん</h2>
  </div>
  <div class="row justify-content-center">
    <div class="col-2 text-center">
      <%= render 'sidebar' %>
    </div>

    <div class ="col-10">
      <div class="card-list-container py-5">
      <% @talks.each do |post| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_post_image, class:"card-img-top"; %>
          <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= image_tag post.user.get_profile_image, size: '80x80', class:"mt-3 rounded-circle" %>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <%= link_to(post_path(post.id), class:"text-dark") do %>
                    <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
                  <% end %>
                </p>
                <p class="card-body"><%= post.body %></p>
                <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>
                <span><%= link_to "コメント #{post.comments.count} 件", post_path(post.id) %></span>
                <spanp class="post-date"><%= post.created_at %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>