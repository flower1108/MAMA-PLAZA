<div class="row">
    <div class ="col-10  card-list p-5">
      <% posts.each do |post| %>
      <div class="card mx-auto mt-4" style="max-width: 900px;">
        <div class="row no-gutters">
        <div class="col-lg-3">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_post_image, :height => '180', class:"card-img-top"; %>
          <% end %>
          </div>
          <div class="col-lg-9">
          <div class="card-body">
            <div class="row">
              <div class="col-6">
                <p class="card-title">
                  <%= link_to(post_path(post.id), class:"text-dark") do %>
                    <strong><span> <%= post.title %></span></strong>
                  <% end %>
                </p>
                <span><%= link_to "コメント #{post.comments.count} 件", post_path(post.id) %></span>
                <span class="post-date"><%= post.created_at.strftime('%Y/%m/%d') %></span>
              </div>
            </div>
                <p class="card-text"><%= post.body.truncate(75) %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>