<div class="container">
  <div class="row d-flex justify-content-center">
    <h2 class="m-0 pr-1 post-blog-heading">おでかけ</h2>
  </div>
  <div class="row">

    <!--sidebar-->
    <div class="col-2 text-center">
      <%= render 'sidebar' %>
    </div>

    <!--main content-->
    <div class ="col-10  card-list p-5">
      <% @trips.each do |post| %>
      <div class="card mx-auto mt-4 shadow-lg" style="max-width: 900px;">
        <div class="row no-gutters">
          <div class="col-md-3">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_post_image, class:"card-img-top index-img"; %>
            <% end %>
          </div>
          <div class="col-md-9">
            <div class="card-body">
              <div class="row">
                <div class="cart-title-img col-xs-2">
                  <%= image_tag post.user.get_profile_image, size: '80x80', class:"card-title-img rounded-circle" %>
                </div>
                <div class="cart-title-top col-xs-8">
                  <p class="card-title-text">
                    <%= link_to(post_path(post.id), class:"text-dark") do %>
                      <strong><span> <%= post.title %></span></strong>
                    <% end %>
                  </p>
                  <span class="post-title"><i class="fas fa-user"></i> <%= link_to post.user.name, user_path(post.user.id), class:"text-link" %> ｜ </span>
                  <span class="post-title-comments"><%= link_to "コメント #{post.comments.count} 件", post_path(post.id), class:"text-link" %></span>
                  <span class="post-date"><%= post.created_at.strftime('%Y/%m/%d') %></span>
                </div>
              </div>
              <p class="card-text"><%= post.body.truncate(75) %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <%= paginate @trips %>
    </div>
  </div>
</div>