<div class="container mypage">
  <div class="row">
    <div class="col">

      <h3 class="my-page-title">マイページ <%= link_to "編集", edit_user_path(current_user) ,class: "btn btn-outline-secondary"%></h3>

      <table class="table table-bordered">
      	<tbody>
      		<tr>
      			<th class="table-head">ニックネーム</th>
      			<td class="table-deta"><%= @user.name %></td>
      		</tr>
      		<tr>
      			<th class="table-head">子ども情報</th>
      			<td class="table-deta"><%= @user.child_information %></td>
      		</tr>
      		<tr>
      			<th class="table-head">メールアドレス</th>
      			<td class="table-deta"><%= @user.email %></td>
      		</tr>
      		<tr>
      			<th class="table-head">自己紹介</th>
      			<td class="table-deta"><%= @user.introduction %></td>
      		</tr>
      	</tbody>
      </table>
      <table>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
