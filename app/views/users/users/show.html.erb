<div class="container mypage">
  <div class="row">
    <div class="col">
      <% if user_signed_in? && current_user.id.to_s == params[:id] %>
      <h3 class="my-page-title">マイページ <%= link_to "編集", edit_user_path(current_user) ,class: "btn btn-outline-secondary"%></h3>

      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-head">プロフィール画像</th>
            <td class="table-deta"><%= image_tag @user.profile_image, :height => '150' %></td>
          </tr>
          <tr>
            <th class="table-head">ニックネーム</th>
            <td class="table-deta"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table-head">子ども情報</th>
            <td class="table-deta"><%= @user.child_information %></td>
          </tr>
          <tr>
            <th class="table-head">メールアドレス</th>
            <td class="table-deta"><%= @user.email %></td>
          </tr>
          <tr>
            <th class="table-head">自己紹介</th>
            <td class="table-deta"><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <% else %>
      <h2><%= @user.name %></h2>
      <% if current_user.following?(@user) %>
        <p><%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %></p>
      <% else %>
        <p><%= link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
      <% end %>
      <table>
        <tbody>
          <tr>
            <th class="table-head">プロフィール画像</th>
            <td class="table-deta"><%#= image_tag @user.profile_image, :height => '150' %></td>
          </tr>
          <tr>
            <th class="table-head">子ども情報</th>
            <td class="table-deta"><%= @user.child_information %></td>
          </tr>
          <tr>
            <th class="table-head">自己紹介</th>
            <td class="table-deta"><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
      <p><%= link_to "お気に入り一覧", favorites_user_path(@user) %></p>
      <p><%= link_to "フォロー",  followings_user_path(@user) %></p>
      <p><%= link_to "フォロワー", followers_user_path(@user) %></p>
      <table>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
