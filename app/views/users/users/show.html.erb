<div class="container">
  <div class="row no-gutters">
    <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">

      <% if user_signed_in? && current_user.id.to_s == params[:id] %>
      <h2 class="text-dark bg-light p-4 mb-0">
        <%= image_tag @user.get_profile_image, class: "rounded-circle", :height => '70' %>  <%= @user.name %>     <%= link_to "編集", edit_user_path(current_user) , class: "btn btn-outline-secondary" %>
      </h2>
      <div>
        <ul class="list-group list-group-horizontal flex-fill list-group-flush">
          <li class="list-group-item">
            <%= link_to favorites_user_path(@user) do %>
              <i class="fas fa-heart"></i>お気に入り
            <% end %>
          </li>
          <li class="list-group-item">
            <%= link_to followings_user_path(@user) do %>
              <i class="fas fa-user-friends"></i>フォロー
            <% end %>
          </li>
          <li class="list-group-item">
            <%= link_to followers_user_path(@user) do %>
              <i class="fas fa-user-friends"></i>フォロワー
            <% end %>
          </li>
        </ul>
      </div>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th class="table-head">子ども情報</th>
            <td class="table-deta"><%= @user.child_information %></td>
          </tr>
          <tr>
            <th class="table-head">メールアドレス</th>
            <td class="table-deta"><%= @user.email %></td>
          </tr>
          <tr>
            <th class="table-head">自己紹介</th>
            <td class="table-deta"><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <% else %>
      <h2 class="text-dark bg-light p-4 mb-0">
        <%= image_tag @user.profile_image, :height => '70' %>  <%= @user.name %>
          <% if current_user.following?(@user) %>
            <%= link_to user_relationships_path(@user.id), method: :delete do %>
              <i class="fas fa-user-minus"></i>
            <% end %>
          <% else %>
            <%= link_to user_relationships_path(@user.id), method: :post do %>
              <i class="fas fa-user-plus"></i>
            <% end %>
          <% end %>
      </h2>
      <div>
        <ul class="list-group list-group-horizontal flex-fill list-group-flush">
          <li class="list-group-item">
            <%= link_to favorites_user_path(@user) do %>
              <i class="fas fa-heart"></i>お気に入り
            <% end %>
          </li>
          <li class="list-group-item">
            <%= link_to followings_user_path(@user) do %>
              <i class="fas fa-user-friends"></i>フォロー
            <% end %>
          </li>
          <li class="list-group-item">
            <%= link_to followers_user_path(@user) do %>
              <i class="fas fa-user-friends"></i>フォロワー
            <% end %>
          </li>
        </ul>
      </div>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th class="table-head">子ども情報</th>
            <td class="table-deta"><%= @user.child_information %></td>
          </tr>
          <tr>
            <th class="table-head">自己紹介</th>
            <td class="table-deta"><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
      <%= render 'users/posts/post', post: @posts %>
    </div>
  </div>
</div>
