<div class="row justify-content-md-center">
  <% users.each do |user| %>
    <div class="col-12 col-md-6 col-lg-3 mb-3">
      <div class="card shadow-lg">
        <div class="card-image" style="width: 100%; height: 180px;">
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image, class:"card-img-top"; %>
          <% end %>
        </div>
        <div class="card-body">
          <p class="card-title">
            <%= link_to(user_path(user.id), class:"text-dark") do %>
              <strong><span> <%= user.name %></span></strong>
            <% end %>
          <% if current_user.following?(user) %>
            <%= link_to user_relationships_path(user.id), method: :delete do %>
              <i class="fas fa-user-minus" style="color: #8ab3a4;"></i>
            <% end %>
          <% else %>
            <%= link_to user_relationships_path(user.id), method: :post do %>
              <i class="fas fa-user-plus" style="color: #8ab3a4;"></i>
            <% end %>
          <% end %>
          </p>
          <span><%= "投稿 #{user.post.count}件" %></span><br>
          <span class="user-text"><i class="fas fa-baby"></i><%= user.child_information %></span><br>
        </div>
      </div>
    </div>
  <% end %>
</div>