<div class="row"  style="margin-top: 40px;">
  <div class="col-2 text-center">
    <%= render 'users/posts/sidebar' %>
  </div>

  <div class ="col-12 col-lg-9">
    <div class="row">
      <% users.each do |user| %>
        <div class="col-12 col-md-6 col-lg-3 mb-3">
          <div class="card shadow-lg">
            <div class="card-image" style="width: 100%; height: 180px;">
              <%= link_to user_path(user.id) do %>
                <%= image_tag user.get_profile_image, class:"card-img-top"; %>
              <% end %>
            </div>
            <div class="card-body">
              <p class="card-title">
                <%= link_to(user_path(user.id), class:"text-dark") do %>
                  <strong><i class="far fa-user"></i><span> <%= user.name %></span></strong>
                <% end %>
              </p>
              <span><%= "投稿 #{user.post.count}件" %></span><br>
              <span class="user-text"><i class="fas fa-baby"></i><%= user.child_information %></span><br>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>