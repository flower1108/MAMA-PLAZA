<div class="container">
  <div class="row">
    <h2>検索結果</h2>
    <table class="table table-hover table-inverse">
      <% if @range == "User" %>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      <% else %>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, post_path(post) %></td>
              <td><%= post.body %></td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
</div>